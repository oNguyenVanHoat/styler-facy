doctype html
html
  +head(head.s29_profile_infomation)
  body.main-page
    +header-staff()

    main.dashboard-container(role='main')
      +sidebar()
      section.dashboard-content.page-profile-infomation
        .inner-content.account-info
          .inner-content-title プロフィール情報
          form.box-content-profile-information
            .row
              .col-md-4
                .box-images
                  .box-description
                    .box-images-content
                      .images
                      i.icon-uploads
                    .box-text-images
                      p.text-first ショップ画像
                      p.text-second (300x300px以上推奨)
              .col-md-6
                .box-content
                  .form-customize
                    .field-wrapper
                      +input-field('ショップ名', '必須', '', 'ショップ名入力してください', '', '', '', '', '17/40')
                    .field-wrapper.field-info
                      +textarea('紹介文', '必須', 'ショップ紹介文を入力してください', '', '0/1000')
                    .field-wrapper
                      +input-field('郵便番号', '必須', '', '', '', '', '', '', '')
                    .field-wrapper
                      .row
                        .col-md-4
                          +input-field('住所', '必須', '', '都道府県を入力してください', '', '')
                    .field-wrapper
                      .row
                        .col-md-4
                          .no-notice
                            +selectBox('都道府県', '必須', 'Option A', '', '', 'Option B')
                    .field-wrapper
                      +input-field('住所', '必須', '', '都道府県以下の住所を入力してください', '', '', '', '', '0/40')
                    .field-wrapper
                      +input-field('最寄駅', '必須', '', '最寄駅を入力してください', '', '', '', '', '0/40')
                    .field-wrapper
                      +input-field('電話番号', '必須', '', 'URLを入力してください', '', '', '', '', '0/40')
                    .field-wrapper
                      +input-field('ホームページ', '必須', '', '電話番号を入力してください', '', '', '', '', '0/40')
                    .field-wrapper
                      .form-group
                        label 営業時間、定休日
                          span.text 必須
                        table.styler-table
                          tr
                            th
                            th OPEN
                            th
                            th CLOSE
                            th 定休日
                          tr
                            td(data-th='') 日
                            td(data-th='OPEN')
                              .box-input-inner.time-picker
                                input(class="form-control js-time-picker" type="text" id="" placeholder="00:00 AM" value="")
                                i.visible-lg-inline-block.visible-md-inline-block.sty-icon-access-time
                            td.space(data-th='') -
                            td(data-th='CLOSE')
                              .box-input-inner.time-picker
                                input(class="form-control js-time-picker" type="text" id="" placeholder="00:00 AM" value="")
                                i.visible-lg-inline-block.visible-md-inline-block.sty-icon-access-time
                            td(data-th='定休日')
                              +checkbox-custom('read-only-one', 'read-only-one', '','')
                          tr
                            td(data-th='') 月
