include modules/head/head
include modules/header/header
include modules/footer/footer
include modules/sidebar/sidebar
include modules/elements/elements
include modules/media/media
include modules/modals/modals
include modules/import-script/import-script

doctype html
html
  +head(head.s13_pick_up_date_selection)
  body.main-page
    +header-staff()

    .dashboard-container
      +sidebar('sidebar1_3')

      .dashboard-content.page-pick-up-date-selection
        .picker-banner
          .picker-banner__content
            h3.picker-banner__brand NIKE
            p.picker-banner__use French Trainer 1300FS
            p.picker-banner__price 22,680
              small.picker-banner__currency 円
              span.picker-banner__tax （税込）
        .picker-step
          .picker-step__group
            .picker-step__list
              .picker-step__line
              .picker-step__item
                span.picker-step__button.picker-step__button--first
                p.picker-step__text 引取先
              .picker-step__item.picker-step__item--active
                span.picker-step__button
                p.picker-step__text 引取日
              .picker-step__item
                span.picker-step__button
                p.picker-step__text 確認
              .picker-step__item
                span.picker-step__button.picker-step__button--last
                p.picker-step__text 完了
          .select-takeover
            h2.select-takeover__title.picker-title 引取日を選択
            .selection-date
              .selection-date__list
                .selection-date__item
                  +radio-button('takeover-select', 'takeover-select-1')(class='selection-date__select')
                  i.sty-icon-check-success.selection-date__icon
                  p.selection-date__text 1日後（3月28日・土）
                .selection-date__item
                  +radio-button('takeover-select', 'takeover-select-1')(class='selection-date__select')
                  i.sty-icon-check-success.selection-date__icon
                  p.selection-date__text 2日後（3月29日・日）
                .selection-date__item
                  +radio-button('takeover-select', 'takeover-select-1')(class='selection-date__select')
                  i.sty-icon-check-success.selection-date__icon
                  p.selection-date__text 3日後（3月30日・日）
          .authentication-step
            +button('引取日を選択')(class='button--primary button--w370 button--picker-step')

    +footer()

    +snackbarStaff()

    +import-script()
