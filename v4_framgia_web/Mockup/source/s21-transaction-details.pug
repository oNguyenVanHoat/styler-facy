include modules/head/head
include modules/header/header
include modules/footer/footer
include modules/sidebar/sidebar
include modules/elements/elements
include modules/import-script/import-script

doctype html
html
  +head(head.s21_transaction_details)
  body.main-page
    +header-staff()

    main.dashboard-container(role='main')
      +sidebar('sidebar2_2')
      section.dashboard-content.page-transaction-details
        .inner-content.content-info
          .row
              .col-md-4
                .box-images
                  img(src='images/item-product_01.png' alt='')
              .col-md-6.box-content-transaction
                .box-top
                  h3.title NIKE
                  .roshe-run ROSHE RUN
                  .logo-company
                    .box-images-company
                      img(src='images/logo-shop.png' alt='logo-shop')
                    .text ONS
                .box-inner
                  .shop-order
                    p.shop-store-number 注文番号：
                      span {00000001}-{shop.id}-{user.id}-{MM}
                  .title 注文状況
                  .box-button
                    span.label-message-state 未受渡
                .box-bottom
                  .shipping-title
                    span.shipping-name 来店予定日
                    span.shipping-text 2017年12月29日（木） 17時50分
                  .box-payment-details
                    .box-title お支払い明細
                    .box-payment
                      span.name.name-first お品代
                      span.price 21,600円
                    .box-payment
                      span.name 合計
                      span.price 21,600円(税込)

                  .btn-button
                    +button('メッセージ画面へ', 'button')(class='button--primary btn-message-screen')

    +footer()

    +snackbarStaff()

    +import-script()
