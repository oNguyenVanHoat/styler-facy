                    +linkActive(classActive, 'sidebar4_2', '引取依頼未対応')
        li.group-sidebar
          .sidebar-items
            a(href='#sidebar-item-setting' class='item-header js-item-header' data-toggle='collapse')
              i.item-header__icon-left.item-header__no-color.sty-icon-event
              span.item-header__title.item-header__no-color ショップ設定
              i.item-header__icon-right.collapsed-icon.sty-icon-arrow-up
            #sidebar-item-setting.panel-collapse.collapse
              .item-content
                ul.item-content__list
                  li.item-content__child
                    +linkActive(classActive, 'sidebar5_1', '在庫依頼未対応')
                  li.item-content__child
                    +linkActive(classActive, 'sidebar5_2', '引取依頼未対応')
